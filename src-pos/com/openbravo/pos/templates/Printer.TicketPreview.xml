<output>
     
    <display>
        <line>
            <text align="left" length="10">Итого.</text>
            <text align="right" length="10">${ticket.printTotal()}</text>
        </line>
        <line>
           <text align="center" length="20">Спасибо.</text>
        </line>
    </display>

    <ticket>
        <image>Printer.Ticket.Logo</image>
        <line></line>
        <line>
            <text align="center" length="42">Пример текста чека.</text>
        </line>
        <line>
            <text align="center" length="42">Вы можете его изменить</text>
        </line>
        <line>
            <text align="center" length="42">через раздел Ресурсы.</text>
        </line>
        <line></line>
        <line>
            <text align="left" length="15">Чек:</text>
            <text>${ticket.printId()}</text>
        </line>
        <line>
            <text align="left" length="15">Дата:</text>
            <text>${ticket.printDate()}</text>
        </line>

         #if ($ticket.getCustomer())
        <line>
            <text align="left" length="15">Клиент:</text>
            <text>${ticket.getCustomer().getName()}</text>
        </line>      
        <line>
            <text align="left" length="15"></text>
            <text>${ticket.getCustomer().getTaxid()}</text>
        </line>  
        #end
        
        #if ($place != "")
        <line>
            <text align="left" length="15">Стол:</text>
            <text>${place}</text>
        </line>
        #end
        <line></line>
        <line>
            <text align ="left" length="17">Наименование</text>
            <text align ="right" length="10">Цена</text>
            <text align ="right" length="5"></text>
            <text align ="right" length="10">Сумма</text>
        </line>
        <line>
             <text>------------------------------------------</text>
        </line>

        #foreach ($ticketline in $ticket.getLines())
        <line>
             #if ($ticketline.isProductCom()) 
                 <text align ="left" length="17">*${ticketline.printName()}</text>
             #else
                 <text align ="left" length="17">${ticketline.printName()}</text>
             #end
            <text align ="right" length="10">${ticketline.printPrice()}</text>
            <text align ="right" length="5">x${ticketline.printMultiply()}</text>
            <text align ="right" length="10">${ticketline.printSubValue()}</text>
        </line> 
        #end

        <line>
             <text>------------------------------------------</text>
        </line>   
        <line>
            <text>Кол-во товаров: </text>
            <text align ="right" length="10">${ticket.printArticlesCount()}</text>
        </line> 
        <line></line> 
        <line>
            <text align ="left" length="16">Всего.</text>
            <text align ="right" length="20">${ticket.printSubTotal()}</text>
        </line> 
        <line></line> 
        <line size="1">
            <text align ="left" length="16" bold="true">Итого.</text>
            <text align ="right" length="20" bold="true">${ticket.printTotal()}</text>
        </line>    

        #foreach ($paymentline in $ticket.payments)      
         #if ($paymentline.name == "cash")
        <line></line>     
        <line>
            <text bold="true">Наличные</text>
        </line>  
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>     
         #end
         #if ($paymentline.name == "cashrefund")
        <line></line>     
        <line>
            <text bold="true">Возврат из кассы</text>
         </line>
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "magcard")
        <line></line>        
        <line>
            <text bold="true">Карта</text>
        </line>   
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>  
         #end  
         #if ($paymentline.name == "magcardrefund")
        <line></line>     
        <line>
            <text bold="true">Возврат на карту</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "cheque")
        <line></line>     
        <line>
            <text bold="true">Чек</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "chequerefund")
        <line></line>     
        <line>
            <text bold="true">Возврат чека</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "paperin")
        <line></line>     
        <line>
            <text bold="true">Расписка</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "paperout")
        <line></line>     
        <line>
            <text bold="true">Возврат расписки</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "free")
        <line></line>     
        <line>
            <text bold="true">Без оплаты</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end
         #if ($paymentline.name == "debt")
        <line></line>     
        <line>
            <text bold="true">В кредит</text>
        </line>    
        <line>
            <text align ="right" length="42">${paymentline.printTotal()}</text>
        </line>    
         #end 
         #end 
        
        <line></line>  
        <line>
            <text align="left" length="15">Кассир:</text>
            <text>${ticket.printUser()}</text>
        </line> 
        
        <line></line>            
        <line>
            <text align="center" length="42">Спасибо за покупку.</text>
        </line>    
    </ticket>

</output>
